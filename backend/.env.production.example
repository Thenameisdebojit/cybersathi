# ==================================
# CyberSathi PRODUCTION Configuration
# ==================================
# SECURITY: Never commit this file with real values to git!
# Copy to .env.production and fill with your actual production values

# ----------------------------------
# Application Settings
# ----------------------------------
APP_NAME=CyberSathi
APP_VERSION=1.0.0
DEBUG=False
PORT=8000
HOST=0.0.0.0
FRONTEND_URL=https://your-production-frontend.vercel.app
ENVIRONMENT=production

# ----------------------------------
# MongoDB Database - REQUIRED
# ----------------------------------
# Get from MongoDB Atlas: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/database?options
MONGODB_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/cybersathi?retryWrites=true&w=majority
MONGODB_DB_NAME=cybersathi
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# ----------------------------------
# Security & JWT - GENERATE NEW KEYS FOR PRODUCTION!
# ----------------------------------
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_generate_32_char_random_string
# Run: python -c "import secrets, base64; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
ENCRYPTION_KEY=CHANGE_THIS_generate_32_byte_base64_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------
# Admin Credentials - USE STRONG PASSWORD!
# ----------------------------------
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=CHANGE_THIS_create_strong_password_min_12_chars
ADMIN_PHONE=+919999999999

# ----------------------------------
# CORS Configuration - CRITICAL!
# ----------------------------------
# Only allow your production frontend domain
CORS_ORIGINS=https://your-production-frontend.vercel.app

# ----------------------------------
# WhatsApp Meta Cloud API - Required for chatbot
# ----------------------------------
META_VERIFY_TOKEN=your_production_verify_token
META_ACCESS_TOKEN=your_whatsapp_access_token
META_APP_SECRET=your_app_secret
META_PHONE_NUMBER_ID=your_phone_number_id
META_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_API_VERSION=v18.0

# ----------------------------------
# NCRP Integration
# ----------------------------------
NCRP_API_URL=https://cybercrime.gov.in/api
NCRP_CLIENT_ID=your_ncrp_client_id
NCRP_CLIENT_SECRET=your_ncrp_client_secret
NCRP_API_KEY=your_ncrp_api_key
NCRP_MOCK_MODE=False

# ----------------------------------
# Optional Services
# ----------------------------------
REDIS_URL=redis://your-redis-host:6379/0
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=INFO
