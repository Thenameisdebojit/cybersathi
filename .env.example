# ==============================================
# CyberSathi Environment Configuration
# ==============================================
# IMPORTANT: Copy this file to .env and update with your actual values
# Never commit .env file with real credentials to version control

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME=CyberSathi
APP_VERSION=1.0.0
DEBUG=true
PORT=8000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:5000
ENVIRONMENT=development

# ==============================================
# DATABASE - MONGODB
# ==============================================
# Get MongoDB connection string from MongoDB Atlas or Replit
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=cybersathi
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# ==============================================
# CACHE & QUEUE - REDIS
# ==============================================
# Redis connection string
# Format: redis://username:password@host:port/db
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
CACHE_TTL=3600

# ==============================================
# BACKGROUND TASKS - CELERY
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==============================================
# WHATSAPP META CLOUD API
# ==============================================
# Get these from Meta for Developers (https://developers.facebook.com)
META_VERIFY_TOKEN=your_custom_verify_token_here
META_ACCESS_TOKEN=your_meta_access_token_here
META_APP_SECRET=your_meta_app_secret_here
META_PHONE_NUMBER_ID=your_phone_number_id_here
META_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_API_VERSION=v18.0
WHATSAPP_API_BASE_URL=https://graph.facebook.com

# ==============================================
# NCRP INTEGRATION (National Cybercrime Reporting Portal)
# ==============================================
# Contact NCRP for API credentials
NCRP_API_URL=https://cybercrime.gov.in/api
NCRP_CLIENT_ID=your_ncrp_client_id_here
NCRP_CLIENT_SECRET=your_ncrp_client_secret_here
NCRP_API_KEY=your_ncrp_api_key_here
NCRP_MOCK_MODE=true

# ==============================================
# SECURITY & AUTHENTICATION
# ==============================================
# Generate a strong secret key (32+ characters)
# Use: openssl rand -hex 32
SECRET_KEY=your_secret_key_min_32_chars_change_in_production
ENCRYPTION_KEY=your_encryption_key_256_bit_change_in_production

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# GOOGLE OAUTH
# ==============================================
# Get from Google Cloud Console (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# ==============================================
# PASSWORD POLICY
# ==============================================
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ==============================================
# RASA NLP (Natural Language Processing)
# ==============================================
RASA_API_URL=http://localhost:5005
RASA_MODEL_PATH=./rasa/models
RASA_ENABLED=true
NLP_CONFIDENCE_THRESHOLD=0.6

# ==============================================
# HELPLINE INFORMATION
# ==============================================
HELPLINE_NUMBER=1930
HELPLINE_EMAIL=support@cybercrime.gov.in

# ==============================================
# ADMIN USER (First Time Setup)
# ==============================================
ADMIN_EMAIL=admin@cybersathi.in
ADMIN_PASSWORD=ChangeThisSecurePassword123!
ADMIN_PHONE=+919999999999

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# SMS Provider (e.g., Twilio, MSG91)
SMS_API_KEY=your_sms_provider_api_key_here
SMS_API_URL=https://api.sms-provider.com/send

# Email Service (e.g., SendGrid, AWS SES)
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
EMAIL_FROM=noreply@cybersathi.in

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
ENABLE_METRICS=true

# ==============================================
# FILE UPLOAD
# ==============================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx
UPLOAD_DIR=./uploads

# ==============================================
# DATA RETENTION
# ==============================================
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=730

# ==============================================
# CORS SETTINGS
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:5000,http://localhost:3000
